<style>

  #user-info {
    margin-left: 20px;
    margin-bottom: 10px;
    font-weight: bold;
    font-size: large; 
  }
 
</style>
<div class="container-fluid px-4">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/home">Dashboard</a></li>
      <li class="breadcrumb-item active" aria-current="page">User list</li>
    </ol>
  </nav>
</div>

<div id="user-info">User Details</div>
<div class="card-body">
  <table id="datatablesSimple">
    <thead>
      <tr>
        <th><div>S.No</div></th>
        <th><div>First Name</div></th>
        <th><div>Last Name</div></th>
        <th><div>Email</div></th>

      </tr>
    </thead>
    <tbody>
      <% hrList.forEach((hr, index) => { %>
      <tr>
        <td><div><%= index + 1 %></div></td>
        <td><div class="firstName"><%= hr.user_first_name %></div></td>
        <td><div class="lastName"><%= hr.user_last_name %></div></td>
        <td><div class="email"><%= hr.user_email %></div></td>
      </tr>
      <% }); %>
    </tbody>
 